  "paths": {
    "/inventory": {
      "get": {
        "tags": ["inventory"],
        "summary": "Get disc inventory",
        "description": "Get disc inventory",
        "operationId": "getInventory",
        "parameters": [
          {
            "name": "course",
            "description": "Get inventory for specified courses",
            "in": "query",
            "schema": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Disc"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["inventory"],
        "summary": "Add new disc to inventory",
        "description": "Creates a new disc in the found discs",
        "operationId": "postInventory",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PostDisc"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Course"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/inventory/{itemId}": {
      "patch": {
        "tags": ["inventory"],
        "summary": "Update disc attributes",
        "description": "Pass at least one attribute to update for a disc in inventory",
        "operationId": "patchInventory",
        "parameters": [
          {
            "name": "itemId",
            "required": true,
            "description": "Inventory item id to update",
            "in": "path",
            "schema": {
              "type": "number"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PatchDisc"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PatchDiscResponse"
                }
              }
            }
          }
        }
      }
    },
    "/courses": {
      "get": {
        "tags": ["courses"],
        "summary": "Get courses",
        "description": "Retrieve a list of courses and filter by params",
        "operationId": "getCourses",
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
